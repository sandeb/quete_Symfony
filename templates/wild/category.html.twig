
{% extends 'base.html.twig' %}

{% block body %}
    <h1>Les 3 dernières séries de la categorie {{ categoryName }}  </h1>


        {% for program in programs %}
            <div>
                <h2>{{ loop.index }} / {{ program.title }} </h2>
                <p>{{ program.summary }}</p>
            </div>
        {% else %}
            Aucune série trouvée.
        {% endfor %}
        <a href="{{ path('app_index') }}">
            Retour à l'accueil
        </a>
{% endblock %}